$gray-base = darken(white, 30%)
$font-family-sans-serif = "jaf-bernina-sans", "Helvetica Neue", Helvetica, Arial, sans-serif
$headings-font-family =  "changeling-neo", "Helvetica Neue", Helvetica, Arial, sans-serif
$link-color = $body-bg

spacing = 50px

@import 'nib'
@import 'bootstrap'

image-replacement(path, width = 100px, height = 100px)
	width width
	height height
	background center center / cover no-repeat
	background-image path
	text-indent 100%
	white-space nowrap
	overflow hidden

h1
	font-weight 700
	small
		font-weight 300
		font-size 100%

	&.brand
		image-replacement url(<%= image_path 'logo.png' %>) 576px 96px

.background
	fixed top bottom left right
	overflow hidden
	z-index -100
	background url(<%= image_path 'construction.jpg' %>) center center / cover no-repeat

	@media (max-width: 767px)
		video
			display none

	video
		absolute top left
		width 100%
		height 100%

		@media (min-aspect-ratio: 16/9)
			height 300%
			top: -100%

		@media (max-aspect-ratio: 16/9)
			width 300%
			left -100%

.overlay
	fixed top bottom left right
	z-index 200

	background alpha(#000, .75)

	.message
		text-align right
		absolute top 50% right spacing

	.contact
		absolute bottom spacing right spacing

.language-selector
	absolute top 1em left 1em
	z-index 300

	a
		margin-right 1em
